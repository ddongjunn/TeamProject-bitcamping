	<!-- 캠핑장 리뷰 검색하기, 정렬하기 -->
	<select id = "campingSearchReview" parameterType = "CampingParam" resultType = "CampingBbsDto">
		SELECT TITLE, CONTENT, USER_ID, READCOUNT FROM CAMPING_BBS WHERE 1=1 
		<if test="choice!=null and choice !='' and search !=null and search !=''">
			<if test = "choice=='title'">
				AND title LIKE '%'||#{search}||'%'
			</if>
			<if test = "choice=='content'">
				AND content LIKE '%'||#{search}||'%'
			</if>
			<if test = "choice=='writer'">
				AND user_id=#{search}
			</if>
		</if>
		AND CONTENTID = #{contentid} AND DEL = 0 ORDER BY
			<if test = "reviewsorting!=null and reviewsorting != ''">
			<choose>
				<when test = "reviewsorting=='create'">
					WDATE DESC
				</when>
				<when test = "reviewsorting=='read'">
					READCOUNT DESC
				</when>
				<when test = "reviewsorting=='like'">
					LIKE_COUNT DESC
				</when>
				<otherwise>
					WDATE DESC
				</otherwise>
			</choose>
		</if>
			<if test = "reviewsorting==null">
				WDATE DESC
			</if>
		</select> 
		
		<!-- 캠핑장 좋아요 긁어오기 
		<select id = "getCampingLike" parameterType = "java.lang.Integer" resultType = "CampingLike">
			SELECT * FROM CAMPING_LIKE WHERE CONTENTID = #{contentid} AND CONTENT_TYPE = 1
		</select>-->
		
		<!-- 캠핑장 좋아요 긁어오기 -->
		<select id = "getCampingLike" parameterType = "java.util.Map" resultType = "java.util.Map">
			SELECT * FROM CAMPING_LIKE WHERE CONTENTID = #{campingidx} AND USER_ID = #{useridx} AND CONTENT_TYPE = 1
		</select>
		
		<!-- 캠핑장 좋아요 갯수 검사용  -->
		
		<select id="getCampingLikeInfo" parameterType = "java.lang.Integer" resultType = "map">
			SELECT CONTENTID, LIKECOUNT FROM CAMPING_LIST WHERE 1=1 AND CONTENTID = #{contentid}
		</select>
		
		<!-- 캠핑장 좋아요 하트 추가하기 -->
		<insert id="plusCampingHeart" parameterType = "CampingLike">
			INSERT INTO CAMPING_LIKE(LIKE_AUTO_SEQ, CONTENTID, USER_ID, CONTENT_TYPE)
			VALUES(CAMPING_LIKE_SEQ.NEXTVAL,#{contentid}, #{user_id}, 1)
		</insert>
		
		<!-- 캠핑장 좋아요 하트 감소시키기  -->
		<delete id="minusCampingHeart" parameterType = "CampingLike">
			DELETE FROM CAMPING_LIKE WHERE CONTENTID = #{contentid} AND USER_ID = #{user_id}
		</delete>
		
		<!-- 캠핑장 좋아요수 갯수(likecount) -->
		<select id="getCampingLikecount" parameterType = "java.lang.Integer" resultType = "java.lang.Integer">
		select count(*) FROM CAMPING_LIKE WHERE CONTENTID = #{contentid}
		</select>
		
		<!-- 캠핑장 좋아요 수 늘리기 -->
		<update id = "plusCampingLikecount" parameterType = "java.lang.Integer">
			UPDATE CAMPING_LIST SET LIKECOUNT = LIKECOUNT +1 WHERE CONTENTID = #{contentid}
		</update>
		
		<!-- 캠핑장 좋아요 수 줄이기 -->
		<update id = "minusCampingLikecount" parameterType = "java.lang.Integer">
			UPDATE CAMPING_LIST SET LIKECOUNT = LIKECOUNT -1 WHERE CONTENTID = #{contentid}
		</update>
		
		<!-- 캠핑장 리뷰 댓글 달기 -->
		<insert id = "campingWriteComment" parameterType = "CampingComment">
			INSERT INTO CAMPING_BBS_COMMENT(COMMENT_SEQ, REVIEW_SEQ, USER_ID, CONTENT, WDATE, REF, STEP, DEPTH)
			VALUES(CAMPING_BBS_COMMENT_SEQ.NEXTVAL, #{review_seq}, #{user_id}, #{content}, SYSDATE, 0, 0, 0) 
		</insert>
		
		<!-- 캠핑장 댓글 뿌리기 -->
		<select id="campingShowComment" parameterType = "java.lang.Integer" resultType = "CampingComment">
			SELECT USER_ID, CONTENT, WDATE FROM CAMPING_BBS_COMMENT WHERE COMMENT_SEQ = #{comment_seq}
		</select>
  </mapper>